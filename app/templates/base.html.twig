<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('/styles/output.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% set currentPath = path(app.request.attributes.get('_route'),
        app.request.attributes.get('_route_params')) %}
        <nav class="bg-navbar-background text-lg drop-shadow">
            <div class="px-8 mx-auto">
                <ul class="flex items-center justify-between h-[65px]">
                    <div class="flex space-x-4">
                        <div class="hidden md:flex items-center space-x-1">
                            {% if currentPath == "/"  %}
                                <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("home") }}">Accueil</a></li>
                            {% else %}
                                <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("home") }}">Accueil</a></li>
                            {% endif %}
                        </div>
                    </div>

                    <div class="hidden md:flex items-center space-x-20">
                        {% if currentPath == "/bureau"  %}
                            <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("bureau") }}">Bureau</a></li>
                        {% else %}
                             <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("bureau") }}">Bureau</a></li>
                        {% endif %}
                        {% if app.user is null %}
                            {% if currentPath == "/login"  %}
                                <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("app_login") }}">Connexion</a></li>
                            {% else %}
                            <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("app_login") }}">Connexion</a></li>
                            {% endif %}
                        {% else %}
                            {% if currentPath == "/boutique"  %}
                                <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("shop") }}">Boutique</a></li>
                            {% else %}
                            <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("shop") }}">Boutique</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                {% if currentPath == "/admin"  %}
                                    <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("admin") }}">Administration</a></li>
                                {% else %}
                                     <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("admin") }}">Administration</a></li>
                                {% endif %}
                           {% endif %}
                             {% if currentPath == "/profil/"  %}
                                 <li><a class="transition underline underline-offset-8 font-semibold py-5 px-3 text-white" href="{{ path("profile") }}">Profil</a></li>
                             {% else %}
                                 <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("profile") }}">Profil</a></li>
                            {%endif%}
                            <li><a class="transition hover:underline font-semibold py-5 px-3 text-white" href="{{ path("app_logout") }}">Déconnexion</a></li>
                        {% endif %}
                    </div>
                </ul>
            </div>

        </nav>


        {% block body %}{% endblock %}
    </body>
</html>
