{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <div class=" flex flex-col justify-evenly w-[40rem] h-fit px-32 m-auto shadow-md bg-gray-100 py-8 my-8">
        <h1 class="self-center text-4xl font-bold mb-8">{{ news.title }}</h1>

        <p class=" text-center px-1 text-navbar-background font-bold">id: <span class="font-normal text-black">{{ news.id }}</span></p>
        <img src="{{ asset('/ImageNews/'~ news.imageName) }}"  alt="imageArticle">

        <p class=" text-center px-1 font-bold text-navbar-background">Contenu:</p>
        <p class=" text-justify px-1 font-medium text-[#7C7C7C]">{{ news.textContent }}</p>


        <p class="h-10"></p>

        <a class="self-center mb-2 text-center btn btn-lg btn-primary text-white font-bold box-content h-5 w-48 p-4 border-2 border-[#374779] transition text-white bg-[#374779] hover:bg-[#CBD8E5] hover:text-[#374779]" href="{{ path('news_edit', {'id': news.id}) }}">Modifier</a>
        {{ include('news/_delete_form.html.twig') }}
        <a class="text-[#7C7C7C] transition hover:text-[#374779] font-medium mt-3 text-center" href="{{ path('news_index') }}">Retour</a>
    </div>
{% endblock %}
