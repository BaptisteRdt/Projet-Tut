{% extends 'base.html.twig' %}

{% block title %}Association de la préfecture de la Haute-Vienne{% endblock %}

{% block body %}
    <div class=" flex flex-col justify-evenly w-[80%] h-fit px-32 m-auto shadow-md bg-gray-100 py-8 my-8">
        <h1 class="self-center text-4xl font-bold mb-8">{{ news.title }}</h1>

        <img src="{{ asset('/ImageNews/'~ news.imageName) }}" class="w-auto max-h-[300px] grow-0 self-center"  alt="imageArticle">

        <p class="text-justify px-1 mt-4 font-medium text-[#7C7C7C]">{{ news.textContent|raw }}</p>

        {% if news.isPinned == true %}
            <p class=" text-center px-1 font-bold text-navbar-background">Cet article est épinglé sur la page d'accueil</p>
        {% endif %}


        <p class="h-10"></p>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('news_edit', {'id': news.id}) }}" class=" self-center ">
                <button  class="my-4 btn btn-lg btn-primary text-white font-bold box-content h-5 w-48 p-4 border-2 border-[#374779] transition text-white bg-[#374779] hover:bg-[#CBD8E5] hover:text-[#374779]">{{ button_label|default('MODIFIER') }}</button>
            </a>

            {{ include('news/_delete_form.html.twig') }}

            <a class="text-[#7C7C7C] transition hover:text-[#374779] font-medium mt-3 text-center" href="{{ path('news_index') }}">Retour</a>
        {% else %}
            <a class="text-[#7C7C7C] transition hover:text-[#374779] font-medium mt-3 text-center" href="{{ path('home') }}">Retour</a>
        {% endif %}


    </div>
{% endblock %}
